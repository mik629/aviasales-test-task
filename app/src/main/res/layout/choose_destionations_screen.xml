<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="@dimen/standard_margin_16"
    android:paddingEnd="@dimen/standard_margin_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/choose_destinations_greeting"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title_size"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/InputFieldLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin_16"
        app:boxCornerRadiusTopEnd="@dimen/corner_radius_8"
        app:boxCornerRadiusTopStart="@dimen/corner_radius_8">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/InputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/InputFieldLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxCornerRadiusBottomEnd="@dimen/corner_radius_8"
        app:boxCornerRadiusBottomStart="@dimen/corner_radius_8"
        app:boxCornerRadiusTopEnd="0dp"
        app:boxCornerRadiusTopStart="0dp"
        app:boxStrokeWidth="0dp">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/InputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/standard_margin_16"
        android:backgroundTint="@color/white"
        android:text="@string/search_button_text"
        android:textColor="@color/primary" />
</LinearLayout>